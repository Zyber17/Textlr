extends layout

block head
	link(rel='stylesheet', href='/stylesheets/index.css')
	script.
		var text;
		window.onload = function() {
			text = document.getElementById("text");
			text.focus();
			window.scrollTo(0,1);
		}
		window.onkeydown = function() {
			if(text != document.activeElement) {
				text.focus();
			}
		}

